                    <colspec class="- topic/colspec " colname="col2" colnum="2" xtrc="colspec:2;22:55" xtrf="file:/C:/Users/nkanga/OneDrive%20-%20Rocket%20Software,%20Inc/Documents/RMF_Grafana/grafana/rmf-app/doc/src/ts_issues.dita"/>
                    <colspec class="- topic/colspec " colname="col3" colnum="3" xtrc="colspec:3;23:55" xtrf="file:/C:/Users/nkanga/OneDrive%20-%20Rocket%20Software,%20Inc/Documents/RMF_Grafana/grafana/rmf-app/doc/src/ts_issues.dita"/>
                    <thead class="- topic/thead ">
                        <row class="- topic/row ">
